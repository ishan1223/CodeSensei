{
  "manifest_version": 3,
  "name": "CodeSensei - AI Coding Mentor",
  "version": "1.0.0",
  "description": "AI-powered hints and debugging assistance for coding platforms",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://hackerrank.com/*",
    "https://codeforces.com/*",
    "https://atcoder.jp/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*",
        "https://hackerrank.com/challenges/*",
        "https://codeforces.com/problemset/problem/*",
        "https://atcoder.jp/contests/*/tasks/*"
      ],
      "js": ["content.js"],
      "css": ["sidebar/styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "CodeSensei"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar/index.html",
        "sidebar/main.js",
        "sidebar/styles.css",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
